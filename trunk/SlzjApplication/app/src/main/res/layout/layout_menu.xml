<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="match_parent"
    android:background="@color/menu_bg">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@mipmap/img_menu_bg" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginTop="@dimen/padding_28"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/padding_10"
                android:layout_marginLeft="@dimen/padding_10"
                android:layout_marginTop="@dimen/padding_10"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/img_head_portrait" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="@dimen/padding_10"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tv_menu_usrname"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:textColor="@color/white"
                        android:textSize="@dimen/font_16_size" />

                    <TextView
                        android:id="@+id/tv_menu_comname"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:ellipsize="end"
                        android:focusable="true"
                        android:focusableInTouchMode="true"
                        android:marqueeRepeatLimit="marquee_forever"
                        android:singleLine="true"
                        android:textColor="@color/white"
                        android:textSize="@dimen/font_16_size" />
                </LinearLayout>
            </LinearLayout>

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:adjustViewBounds="true"
                android:src="@mipmap/img_menu_line_long" />

            <RelativeLayout
                android:id="@+id/rly_menu_member_info"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/selector_menu_item_bg"
                android:padding="10dp">

                <LinearLayout
                    android:id="@+id/lly_menu_member_info"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/imv_member_info"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@mipmap/img_member_info" />

                    <TextView
                        android:id="@+id/tv_menu_memberinfo"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="@dimen/padding_5"
                        android:layout_toRightOf="@id/imv_member_info"
                        android:layout_weight="1"
                        android:text="@string/menu_memberinfo"
                        android:textColor="@color/white"
                        android:textSize="@dimen/font_16_size" />
                </LinearLayout>

                <TextView
                    android:id="@+id/tv_menu_un_realname"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/padding_5"
                    android:layout_marginRight="@dimen/padding_10"
                    android:background="@drawable/tv_shape_bg_red"
                    android:gravity="center"
                    android:text="未实名"
                    android:textColor="@color/white"
                    android:textSize="@dimen/font_14_size" />

            </RelativeLayout>

            <ImageView
                android:id="@+id/imv_menu_realname_below"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:adjustViewBounds="true"
                android:paddingLeft="@dimen/padding_10"
                android:paddingRight="@dimen/padding_10"
                android:src="@mipmap/img_menu_line_long" />

            <RelativeLayout
                android:id="@+id/rly_menu_recharge"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/selector_menu_item_bg"
                android:gravity="center_horizontal"
                android:padding="10dp">

                <LinearLayout
                    android:id="@+id/lly_menu_recharge"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/imv_recharge"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"

                        android:src="@mipmap/img_recharge" />

                    <TextView
                        android:id="@+id/tv_menu_recharge"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="5dp"
                        android:text="@string/menu_recharge"
                        android:textColor="@color/white"
                        android:textSize="16sp" />
                </LinearLayout>

                <TextView
                    android:id="@+id/tv_tv_menu_momey"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="@dimen/padding_10"
                    android:text=""
                    android:textColor="@color/title_bg"
                    android:textSize="16sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_toLeftOf="@+id/tv_tv_menu_momey"
                    android:text="￥"
                    android:textColor="@color/title_bg"
                    android:textSize="16sp" />

            </RelativeLayout>

            <ImageView
                android:id="@+id/imv_menu_recharge_below"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:adjustViewBounds="true"
                android:paddingLeft="@dimen/padding_10"
                android:paddingRight="@dimen/padding_10"
                android:src="@mipmap/img_menu_line_long" />

            <RelativeLayout
                android:id="@+id/rly_menu_my_order"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/selector_menu_item_bg"
                android:gravity="left"
                android:padding="10dp">

                <ImageView
                    android:id="@+id/imv_my_order"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:src="@mipmap/img_my_order" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="5dp"
                    android:layout_toRightOf="@id/imv_my_order"
                    android:text="@string/menu_my_order"
                    android:textColor="@color/white"
                    android:textSize="16sp" />
            </RelativeLayout>

            <ImageView
                android:id="@+id/imv_menu_my_order_below"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:adjustViewBounds="true"
                android:paddingLeft="@dimen/padding_10"
                android:paddingRight="@dimen/padding_10"
                android:src="@mipmap/img_menu_line_long" />

            <RelativeLayout

                android:id="@+id/rly_menu_invoice_management"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/selector_menu_item_bg"
                android:gravity="left"
                android:padding="10dp">

                <ImageView
                    android:id="@+id/imv_invoice_management"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:src="@mipmap/img_invoice_managemen" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="5dp"
                    android:layout_toRightOf="@id/imv_invoice_management"
                    android:text="@string/menu_invoice_management"
                    android:textColor="@color/white"
                    android:textSize="16sp" />
            </RelativeLayout>

            <ImageView
                android:id="@+id/imv_menu_invoice_management_below"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:adjustViewBounds="true"
                android:paddingLeft="@dimen/padding_10"
                android:paddingRight="@dimen/padding_10"
                android:src="@mipmap/img_menu_line_long" />

            <RelativeLayout
                android:id="@+id/rly_team_managent"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/selector_menu_item_bg"
                android:gravity="left"
                android:padding="10dp">

                <ImageView
                    android:id="@+id/imv_team_managent"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:src="@mipmap/img_team_managent" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="5dp"
                    android:layout_toRightOf="@id/imv_team_managent"
                    android:text="@string/menu_team_management"
                    android:textColor="@color/white"
                    android:textSize="16sp" />
            </RelativeLayout>

            <ImageView
                android:id="@+id/imv_menu_team_management_below"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:adjustViewBounds="true"
                android:paddingLeft="@dimen/padding_10"
                android:paddingRight="@dimen/padding_10"
                android:src="@mipmap/img_menu_line_long" />

            <RelativeLayout
                android:id="@+id/rly_menu_coupon"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/selector_menu_item_bg"
                android:gravity="left"
                android:padding="10dp">

                <ImageView
                    android:id="@+id/imv_menu_coupon"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:src="@mipmap/img_menu_coupon" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="5dp"
                    android:layout_toRightOf="@id/imv_menu_coupon"
                    android:text="@string/menu_coupon"
                    android:textColor="@color/white"
                    android:textSize="16sp" />
            </RelativeLayout>

            <ImageView
                android:id="@+id/imv_menu_coupon_below"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:adjustViewBounds="true"
                android:paddingLeft="@dimen/padding_10"
                android:paddingRight="@dimen/padding_10"
                android:src="@mipmap/img_menu_line_long" />

            <RelativeLayout
                android:id="@+id/rly_menu_message"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="gone"
                android:background="@drawable/selector_menu_item_bg"
                android:padding="10dp">

                <LinearLayout
                    android:id="@+id/lly_menu_message"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/imv_menu_message"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@mipmap/img_menu_message" />

                    <TextView

                        android:id="@+id/tv_menu_message"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="5dp"
                        android:text="@string/menu_message"
                        android:textColor="@color/white"
                        android:textSize="16sp"

                        />
                </LinearLayout>

                <TextView
                    android:id="@+id/tv_menu_message_count"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="@dimen/padding_10"
                    android:background="@drawable/tv_shape_bg_red_message"
                    android:gravity="center"
                    android:text="5"
                    android:textColor="@color/white"
                    android:textSize="@dimen/font_14_size"
                    android:visibility="gone" />
            </RelativeLayout>

            <ImageView
                android:id="@+id/imv_menu_message_below"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:adjustViewBounds="true"
                android:paddingLeft="@dimen/padding_10"
                android:paddingRight="@dimen/padding_10"
                android:src="@mipmap/img_menu_line_long" />

            <RelativeLayout
                android:id="@+id/rly_menu_advice"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/selector_menu_item_bg"
                android:gravity="left"
                android:padding="10dp">

                <ImageView
                    android:id="@+id/imv_menu_advice"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:src="@mipmap/img_menu_advice" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="5dp"
                    android:layout_toRightOf="@id/imv_menu_advice"
                    android:text="@string/menu_advice"
                    android:textColor="@color/white"
                    android:textSize="16sp" />
            </RelativeLayout>

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:adjustViewBounds="true"
                android:paddingLeft="@dimen/padding_10"
                android:paddingRight="@dimen/padding_10"
                android:src="@mipmap/img_menu_line_long" />

            <RelativeLayout
                android:id="@+id/rly_menu_more"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/selector_menu_item_bg"
                android:gravity="left"
                android:padding="10dp">

                <ImageView
                    android:id="@+id/imv_menu_more"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:src="@mipmap/img_menu_more" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="5dp"
                    android:layout_toRightOf="@id/imv_menu_more"
                    android:text="@string/menu_more"
                    android:textColor="@color/white"
                    android:textSize="16sp" />
            </RelativeLayout>


        </LinearLayout>
    </ScrollView>
</RelativeLayout>