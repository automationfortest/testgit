<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/gray_ef"
    android:orientation="vertical">

    <slzjandroid.slzjapplication.customView.NavigationView
        android:id="@+id/nav_main"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="47dp"
        android:paddingLeft="26dp"
        android:paddingRight="18dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:paddingRight="10dp"
            android:text="手动添加"
            android:textColor="@color/btn_black_font"
            android:textSize="@dimen/font_17_size" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:text="(已添加"
            android:textColor="@color/edt_gray_font"
            android:textSize="@dimen/font_15_size" />

        <TextView
            android:id="@+id/tv_member_had_manualadded"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:text="0"
            android:textColor="@color/title_bg"
            android:textSize="@dimen/font_15_size" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:text="人)"
            android:textColor="@color/edt_gray_font"
            android:textSize="@dimen/font_15_size" />

        <TextView
            android:id="@+id/tv_manual_show_list"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical|right"
            android:gravity="center_vertical"
            android:text="查看列表"
            android:textColor="@color/tabhost_textcolor"
            android:textSize="@dimen/font_15_size"
            android:visibility="gone" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="vertical">

        <EditText
            android:id="@+id/edt_member_manual_name"
            android:layout_width="match_parent"
            android:layout_height="47dp"
            android:background="@null"
            android:hint="姓名"
            android:paddingLeft="@dimen/font_20_size"
            android:paddingRight="@dimen/font_20_size"
            android:textColorHint="@color/edt_gray_font" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="@dimen/padding_1"
            android:layout_marginLeft="@dimen/padding_10"
            android:layout_marginRight="@dimen/padding_10"
            android:background="@color/gray_ef" />

        <EditText
            android:id="@+id/edt_member_manual_cellphone"
            android:layout_width="match_parent"
            android:layout_height="47dp"
            android:background="@null"
            android:hint="手机号"
            android:inputType="phone"
            android:maxLength="11"
            android:paddingLeft="@dimen/font_20_size"
            android:paddingRight="@dimen/font_20_size"
            android:textColorHint="@color/edt_gray_font" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="@dimen/padding_1"
            android:layout_marginLeft="@dimen/padding_10"
            android:layout_marginRight="@dimen/padding_10"
            android:background="@color/gray_ef" />

        <LinearLayout
            android:id="@+id/lly_menual_add_choose_part"
            android:layout_width="match_parent"
            android:layout_height="47dp"
            android:orientation="horizontal"
            android:paddingLeft="25dp"
            android:paddingRight="@dimen/padding_18">

            <TextView
                android:id="@+id/tv_menualadd_dept"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:text="公司"
                android:textSize="@dimen/font_16_size" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="right"
                android:src="@mipmap/img_edit_member_down_arrow" />
        </LinearLayout>
    </LinearLayout>

    <Button
        android:id="@+id/btn_menual_add_commit"
        android:layout_width="match_parent"
        android:layout_height="49dp"
        android:layout_marginTop="@dimen/padding_6"
        android:background="@color/white"
        android:text="确认并继续添加"
        android:textSize="@dimen/font_20_size" />

</LinearLayout>