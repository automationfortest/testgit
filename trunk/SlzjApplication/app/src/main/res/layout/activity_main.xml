<!-- A DrawerLayout is intended to be used as the top-level content view using match_parent for both width and height to consume the full space available. -->
<slzjandroid.slzjapplication.customView.SlidingMenu xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:xingyun="http://schemas.android.com/apk/res-auto"
    android:id="@+id/id_menu"
    android:layout_width="wrap_content"
    android:layout_height="match_parent"
    xingyun:rightPadding="150dp">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <include
            android:id="@+id/lay_main_menu"
            layout="@layout/layout_menu" />

        <FrameLayout
            android:id="@+id/container"
            android:layout_width="wrap_content"
            android:layout_height="match_parent" />
    </LinearLayout>

</slzjandroid.slzjapplication.customView.SlidingMenu>
