<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/gray_ef"
    android:orientation="vertical">

    <slzjandroid.slzjapplication.customView.NavigationView
        android:id="@+id/nav_main"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="52dp"
        android:layout_margin="@dimen/padding_6"
        android:background="@drawable/shape_chose_adress_bg"
        android:gravity="center"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/lly_chose_adress_city"
            android:layout_width="80dp"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_chose_adress_city"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:paddingLeft="@dimen/padding_1"
                android:singleLine="true"
                android:text="选择城市"
                android:textColor="@color/btn_black_font"
                android:textSize="@dimen/font_16_size" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/padding_5"
                android:src="@mipmap/img_edit_member_down_arrow" />
        </LinearLayout>

        <TextView
            android:layout_width="@dimen/padding_1"
            android:layout_height="41dp"
            android:layout_gravity="center"
            android:background="@color/gray_ef" />

        <EditText
            android:id="@+id/edt_choose_adress"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@null"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:hint="输入您的上车地点"
            android:maxLength="20"
            android:paddingLeft="@dimen/padding_20"
            android:singleLine="true"
            android:textColor="@color/btn_black_font"
            android:textColorHint="@color/edt_gray_font"
            android:textSize="@dimen/font_16_size" />
    </LinearLayout>

    <ListView
        android:id="@+id/list_adress"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:paddingLeft="@dimen/padding_15"
        android:paddingRight="@dimen/padding_15"></ListView>
</LinearLayout>