<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <slzjandroid.slzjapplication.customView.DragView
        android:id="@+id/drag_view"
        android:layout_width="match_parent"
        android:layout_height="60dp">
        <!-- 下层布局 -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:background="@drawable/delete_holder_bg"
            android:orientation="horizontal">

            <Button
                android:id="@+id/delete"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:background="#ff0000"
                android:text="删除"
                android:textColor="@color/floralwhite"
                android:textSize="16sp" />
        </LinearLayout>
        <!-- 上层布局 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#fff">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:orientation="vertical"
                android:paddingLeft="10dp">

                <TextView
                    android:id="@+id/tv_team_menagent_p_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="张三"
                    android:textColor="@color/black"
                    android:textSize="15sp" />

                <TextView
                    android:id="@+id/tv_team_menagent_p_cellphone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="18610003827"
                    android:textColor="@color/edt_gray_font"
                    android:textSize="15sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_team_dept_1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/padding_5"
                    android:maxEms="20"
                    android:textColor="@color/title_bg"
                    android:textSize="15sp" />

            </LinearLayout>

        </LinearLayout>
    </slzjandroid.slzjapplication.customView.DragView>
</LinearLayout>
