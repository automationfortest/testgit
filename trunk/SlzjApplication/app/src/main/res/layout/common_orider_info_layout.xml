<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/padding_10"
        android:layout_marginRight="@dimen/padding_10"
        android:layout_marginTop="@dimen/padding_10"
        android:background="@color/white"
        android:gravity="center"
        android:padding="@dimen/padding_10">

        <TextView
            android:id="@+id/tv_sevice_to_be_status"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="待服务"
            android:textColor="@color/title_bg"
            android:textSize="@dimen/font_20_size" />
    </LinearLayout>

    <include
        layout="@layout/layout_line"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginLeft="@dimen/padding_10"
        android:layout_marginRight="@dimen/padding_10" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/padding_10"
        android:layout_marginRight="@dimen/padding_10"
        android:background="@color/white"
        android:orientation="horizontal"
        android:padding="@dimen/padding_10">

        <LinearLayout

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_service_tobe_deiver_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/btn_black_font"
                    android:textSize="@dimen/font_16_size" />

                <TextView
                    android:id="@+id/tv_driver_number_plate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>

            <TextView
                android:id="@+id/tv_service_tobe_car_kind"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/edt_gray_font"
                android:textSize="@dimen/font_16_size" />
        </LinearLayout>

        <ImageView
            android:id="@+id/imv_service_driver_cellphone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/img_sendcar_call" />

    </LinearLayout>

    <include
        layout="@layout/layout_line"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginLeft="@dimen/padding_10"
        android:layout_marginRight="@dimen/padding_10" />

    <LinearLayout
        android:id="@+id/lly_service_tobe_details"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/padding_10"
        android:layout_marginRight="@dimen/padding_10"
        android:background="@color/white"
        android:orientation="vertical"
        android:padding="@dimen/padding_10">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:paddingBottom="@dimen/padding_5"
            android:paddingTop="@dimen/padding_5">

            <TextView

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="乘   车   人"
                android:textColor="@color/edt_gray_font"
                android:textSize="@dimen/font_16_size" />

            <TextView
                android:id="@+id/tv_service_tobe_passenger_cellphone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/padding_10"
                android:textColor="@color/btn_black_font"
                android:textSize="@dimen/font_16_size" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:paddingBottom="@dimen/padding_5"
            android:paddingTop="@dimen/padding_5">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="费 用 归 属"
                android:textColor="@color/edt_gray_font"
                android:textSize="@dimen/font_16_size" />

            <TextView
                android:id="@+id/tv_service_tobe_coast_dept"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/padding_10"
                android:textColor="@color/btn_black_font"
                android:textSize="@dimen/font_16_size" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:paddingBottom="@dimen/padding_5"
            android:paddingTop="@dimen/padding_5">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="用 车 原 因"
                android:textColor="@color/edt_gray_font"
                android:textSize="@dimen/font_16_size" />

            <TextView
                android:id="@+id/tv_service_tobe_reason"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/padding_10"
                android:textColor="@color/btn_black_font"
                android:textSize="@dimen/font_16_size" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:paddingBottom="@dimen/padding_5"
            android:paddingTop="@dimen/padding_5">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="出   发   地"
                android:textColor="@color/edt_gray_font"
                android:textSize="@dimen/font_16_size" />

            <TextView
                android:id="@+id/tv_service_tobe_from"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/padding_10"
                android:textColor="@color/btn_black_font"
                android:textSize="@dimen/font_16_size" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:paddingBottom="@dimen/padding_5"
            android:paddingTop="@dimen/padding_5">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="目   的   地"
                android:textColor="@color/edt_gray_font"
                android:textSize="@dimen/font_16_size" />

            <TextView
                android:id="@+id/tv_service_tobe_to"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/padding_10"
                android:textColor="@color/btn_black_font"
                android:textSize="@dimen/font_16_size" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:paddingBottom="@dimen/padding_5"
            android:paddingTop="@dimen/padding_5">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="叫 车 时 间"
                android:textColor="@color/edt_gray_font"
                android:textSize="@dimen/font_16_size" />

            <TextView
                android:id="@+id/tv_service_tobe_calltime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/padding_10"
                android:textColor="@color/btn_black_font"
                android:textSize="@dimen/font_16_size" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/lly_service_tobe_accept_time"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:paddingBottom="@dimen/padding_5"
            android:paddingTop="@dimen/padding_5"
            android:visibility="gone">

            <TextView

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="接 单 时 间"
                android:textColor="@color/edt_gray_font"
                android:textSize="@dimen/font_16_size" />

            <TextView
                android:id="@+id/tv_service_tobe_accept_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/padding_10"
                android:textColor="@color/btn_black_font"
                android:textSize="@dimen/font_16_size" />
        </LinearLayout>


    </LinearLayout>

    <ImageView
        android:id="@+id/imv_service_tobe_up_down"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center"
        android:background="@mipmap/img_sendcar_down" />

</LinearLayout>
