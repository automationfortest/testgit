<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/gray_ef">
    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="@color/title_bg"
        android:paddingRight="@dimen/padding_15"
        android:paddingLeft="@dimen/padding_15"
        android:paddingTop="@dimen/padding_20"
        android:gravity="center_vertical">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/img_arrow_left"/>
        <TextView
            android:gravity="center"
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="实名认证"
            android:textColor="@color/white"
            android:textSize="@dimen/font_16_size"/>
    </LinearLayout>
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="42dp"
    android:orientation="horizontal"
    android:gravity="center_vertical"
    android:background="@color/white"
    >
    <RelativeLayout
        android:layout_weight="1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingLeft="@dimen/padding_13"
        android:paddingRight="@dimen/padding_13"
        >
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="企业"
            android:gravity="center"
            android:textSize="18sp"
            android:textColor="@color/title_bg"
            android:layout_centerVertical="true"
            />
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:src="@mipmap/img_verified"
            android:layout_alignParentBottom="true"
            android:adjustViewBounds="true"
            />
    </RelativeLayout>
    <RelativeLayout
        android:paddingLeft="@dimen/padding_13"
        android:paddingRight="@dimen/padding_13"
        android:layout_weight="1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="其他"
            android:gravity="center"
            android:textSize="18sp"
            android:textColor="@color/edt_gray_font"
            android:layout_centerVertical="true"
            />
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:src="@mipmap/img_verified"
            android:layout_alignParentBottom="true"
            android:adjustViewBounds="true"/>
    </RelativeLayout>
</LinearLayout>
    <LinearLayout
        android:layout_marginTop="6dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="vertical"
        >
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/padding_5"
            android:layout_marginRight="@dimen/padding_5"
            android:layout_marginTop="7dp"
            android:background="@color/gray_ef"
            android:text="具有营业执照的机构或分支机构"
            android:textSize="13sp"
            android:gravity="center"/>
        <EditText
            android:layout_width="match_parent"
            android:layout_height="@dimen/padding_53"
            android:background="@null"
            android:hint="企业名称（与营业执照上的企业名称一致）"
            android:textSize="@dimen/font_16_size"
            android:paddingRight="@dimen/padding_22"
            android:paddingLeft="@dimen/padding_22"/>
        <TextView
            android:layout_marginLeft="@dimen/padding_22"
            android:layout_marginRight="@dimen/padding_22"
            android:layout_width="match_parent"
            android:layout_height="@dimen/padding_1"
            android:background="@color/gray_ef"/>
        <EditText
            android:layout_width="match_parent"
            android:layout_height="@dimen/padding_53"
            android:background="@null"
            android:hint="注册号（请完整填写营业执照上的注册号码）"
            android:textSize="@dimen/font_16_size"
            android:paddingRight="@dimen/padding_22"
            android:paddingLeft="@dimen/padding_22"/>
        <TextView
            android:layout_marginLeft="@dimen/padding_22"
            android:layout_marginRight="@dimen/padding_22"
            android:layout_width="match_parent"
            android:layout_height="@dimen/padding_1"
            android:background="@color/gray_ef"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >
            <TextView
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:layout_width="match_parent"
                android:layout_height="@dimen/padding_53"
                android:background="@null"
                android:text="所在城市"
                android:textSize="@dimen/font_16_size"
                android:layout_marginLeft="@dimen/padding_22"
                android:layout_marginRight="@dimen/padding_22"/>
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/img_edit_member_down_arrow"
                android:paddingRight="30dp"
                android:layout_gravity="center_vertical"/>
        </LinearLayout>

    </LinearLayout>
    <LinearLayout
        android:layout_marginTop="@dimen/padding_6"
        android:paddingLeft="@dimen/padding_22"
        android:paddingRight="37dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@color/white"
        android:gravity="center_vertical">
        <ImageView
            android:paddingTop="@dimen/padding_20"
            android:paddingBottom="@dimen/padding_20"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/img_photo_icon"/>
        <LinearLayout
            android:paddingLeft="@dimen/padding_24"
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center_vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="拍下营业执照照片并上传"
                android:textSize="@dimen/font_17_size"
                android:textColor="@color/title_bg"
                />
            <TextView
                android:layout_marginTop="@dimen/padding_10"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/edt_gray_font"
                android:textSize="@dimen/font_14_size"
                android:text="注:请在营业执照复印件上手写或注明“仅用于钱包行云认证”文字，并加盖红色公章。"/>
        </LinearLayout>
    </LinearLayout>
    <Button
        android:layout_marginTop="@dimen/padding_6"
        android:layout_width="match_parent"
        android:layout_height="57dp"
        android:background="@color/title_bg"
        android:text="下一步"
        android:textColor="@color/white"
        android:textSize="@dimen/font_20_size"/>
</LinearLayout>