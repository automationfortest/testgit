<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:gravity="center_vertical"
    android:orientation="vertical">

    <TextView
        android:id="@+id/tv_memberadd_py"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:background="#ededed"
        android:gravity="center_vertical"
        android:paddingLeft="@dimen/font_20_size"
        android:paddingRight="@dimen/font_20_size"
        android:text="A"
        android:textColor="@android:color/white"
        android:textSize="16sp"
        android:visibility="visible" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/white"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingLeft="@dimen/font_20_size"
        android:paddingRight="@dimen/padding_40">

        <CheckBox
            android:id="@+id/cb_memberadd_connects"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="16dp"
            android:layout_weight="1.3"
            android:background="@null"
            android:button="@drawable/checkbox_style" />

        <TextView
            android:id="@+id/tv_memberadd_connects_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:ellipsize="end"
            android:paddingLeft="2dp"
            android:singleLine="true"
            android:textColor="@color/btn_black_font"
            android:textSize="@dimen/font_16_size" />

        <TextView
            android:id="@+id/cb_memberadd_connects_cellphone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="13661305910"
            android:textColor="@color/edt_gray_font"
            android:textSize="@dimen/font_16_size" />
    </LinearLayout>

</LinearLayout>