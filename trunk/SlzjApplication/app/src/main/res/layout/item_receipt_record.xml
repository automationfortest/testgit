<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.35"
            android:orientation="vertical"
            android:padding="@dimen/padding_6">

            <TextView
                android:id="@+id/tv_mechanism"
                style="@style/common_text_black"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="@dimen/padding_4"
                android:text="北京联想控股科技有限公司">

            </TextView>

            <TextView
                android:id="@+id/tv_name_phone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="@dimen/padding_4"
                android:text="张三 15801625603"
                android:textColor="@color/edt_gray_font"
                android:textSize="@dimen/font_14_size">

            </TextView>

            <TextView
                android:id="@+id/tv_address"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="@dimen/padding_4"
                android:text="北京市朝阳区太阳宫南路冠捷大厦"
                android:textColor="@color/edt_gray_font"
                android:textSize="@dimen/font_14_size">

            </TextView>

            <TextView
                android:id="@+id/tv_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="@dimen/padding_4"
                android:text="2016-07-12"
                android:textColor="@color/edt_gray_font"
                android:textSize="@dimen/font_14_size">

            </TextView>


        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_amount"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="1000000"
                android:textColor="@color/title_bg"
                android:textSize="@dimen/font_16_size" />


            <TextView
                android:id="@+id/tv_flag"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="已申请"
                android:textColor="@color/edt_gray_font"
                android:textSize="@dimen/font_16_size" />

        </LinearLayout>

    </LinearLayout>


    <include layout="@layout/layout_line" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_margin="@dimen/padding_6"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_serial_number"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="left"
            android:paddingLeft="@dimen/padding_3"
            android:text="开票记录流水号：235858850"
            android:textColor="@color/edt_gray_font"
            android:textSize="@dimen/font_10_size" />


        <TextView
            android:id="@+id/tv_express_number"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="right"
            android:paddingRight="@dimen/padding_10"
            android:text="(申通快递 288393939)"
            android:textColor="@color/edt_gray_font"
            android:textSize="@dimen/font_10_size" />

    </LinearLayout>

</LinearLayout>
