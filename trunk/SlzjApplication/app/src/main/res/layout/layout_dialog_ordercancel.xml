<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/gray_ef">
    <ImageView
        android:paddingTop="@dimen/padding_15"
        android:paddingBottom="@dimen/padding_20"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:src="@mipmap/img_waring"
        android:background="@color/white"
        android:gravity="center"
        android:adjustViewBounds="true"
        />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:text="您确定要取消订单吗？"
        android:textColor="@color/btn_black_font"
        android:gravity="center"
        android:textSize="@dimen/font_20_size"
        android:paddingBottom="10dp"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@color/white"
        android:gravity="center">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/font_14_size"
            android:text="当天取消订单超过"/>
        <TextView
            android:textSize="@dimen/font_14_size"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="5"
            android:textColor="@color/title_bg"/>
        <TextView
            android:textSize="@dimen/font_14_size"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="次，您的手机"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@color/white"
        android:gravity="center"
        android:paddingBottom="25dp">
        <TextView
            android:textSize="@dimen/font_14_size"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="手机号将被停用"/>
        <TextView
            android:textSize="@dimen/font_14_size"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="24"
            android:textColor="@color/title_bg"/>

        <TextView
            android:textSize="@dimen/font_14_size"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="小时"/>
    </LinearLayout>
    <LinearLayout
        android:layout_marginTop="@dimen/padding_1"
        android:layout_width="match_parent"
        android:layout_height="52dp"
        android:orientation="horizontal">
        <Button
            android:id="@+id/btn_dialog_left"
            android:textColor="@color/title_bg"
            android:text="取消叫车"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/white"
            android:gravity="center"/>
        <TextView
            android:layout_width="@dimen/padding_1"
            android:layout_height="match_parent" />
        <Button
            android:id="@+id/btn_dialog_right"
            android:textColor="@color/title_bg"
            android:text="继续等待"
            android:background="@color/white"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"/>
    </LinearLayout>
</LinearLayout>